<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">
    <View
        style="@style/view_line_h"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@color/white"
        >
        <TextView
            style="@style/label_text"
            android:text="可用余额："
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/icon_the_total_balance"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="¥200"
            android:textSize="14sp"
            android:textColor="@color/redColor_f2"
            />
        <TextView
            style="@style/label_text"
            android:text="冻结金额："
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="¥100"
            android:textSize="14sp"
            android:textColor="@color/blue_6f"
            />
        <TextView
            android:id="@+id/tv_withdraw_deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/radius_5dp_green_bg"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            />
    </LinearLayout>
    <View
        style="@style/view_line_h"
        />
    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/balance_segmentTabLayout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        tl:tl_textsize="14sp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        tl:tl_bar_color="@color/white"
        tl:tl_indicator_corner_radius="5dp"
        tl:tl_indicator_color="@color/bg_green"
        tl:tl_bar_stroke_color="@color/bg_green"
        tl:tl_bar_stroke_width="0.5dp"
        tl:tl_textSelectColor="@color/white"
        tl:tl_tab_padding="20dp"
        android:layout_centerInParent="true"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>