<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/attr_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_attr_list"
            style="@style/label_text"
            android:text="全部"
            android:drawableRight="@mipmap/icon_bottom_grey"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            />
    </RelativeLayout>

    <com.zipingfang.greenhouse.view.GridForScoroller
        android:id="@+id/attr_list_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:horizontalSpacing="14dp"
        android:numColumns="3"
        android:verticalSpacing="14dp" />

</LinearLayout>