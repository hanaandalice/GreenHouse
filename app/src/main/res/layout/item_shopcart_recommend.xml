<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_white_bg_1dp_line"
    android:padding="10dp"
    >
    <com.zipingfang.greenhouse.view.SquareRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/test_goods_discover"
            android:scaleType="centerCrop"
            />
    </com.zipingfang.greenhouse.view.SquareRelativeLayout>

    <LinearLayout
        android:id="@+id/table_group"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="6dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black_66"
        android:text="韩国CJ冷面粉300g"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="10dp"

        />
    <TextView
        style="@style/hint_text_samll"
        android:text="韩文标题"
        android:layout_marginTop="4dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/redColor_f2"
            android:text="¥  "
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/redColor_f2"
            android:text="38"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/grey_hint"
            android:text="¥ 45"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_25dp_greyf2_1dp_line"
            android:paddingBottom="6dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp"
            android:text="看相似"
            android:textColor="@color/grey_hint"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>