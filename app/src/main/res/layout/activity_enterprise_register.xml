<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    >
    <include layout="@layout/include_title"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/title_text"
                android:padding="10dp"
                android:text="企业认证信息：" />

            <View style="@style/view_line_h" />

            <LinearLayout style="@style/ll_h_layout_no_margin">

                <TextView
                    style="@style/label_text"
                    android:text="企业名称:" />

                <EditText
                    android:id="@+id/et_enterprise_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="输入公司/餐厅名称(与营业执照一致)"
                    android:maxLength="20"
                    style="@style/et_textsize_14"
                    />

            </LinearLayout>

            <View style="@style/view_line_h" />

            <LinearLayout style="@style/ll_h_layout_no_margin">

                <TextView
                    style="@style/label_text"
                    android:text="    注册号:" />

                <EditText
                    android:id="@+id/et_register_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="输入公司注册号(与营业执照一致)"
                    android:maxLength="20"
                    style="@style/et_textsize_14"
                    />

            </LinearLayout>

            <View style="@style/view_line_h" />

            <LinearLayout
                android:id="@+id/layout_position"
                style="@style/ll_h_layout_no_margin">

                <TextView
                    style="@style/label_text"
                    android:layout_height="wrap_content"
                    android:text="公司地区:" />

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:hint="地区信息"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/grey_hint"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/iv_right" />
            </LinearLayout>

            <View style="@style/view_line_h" />

            <View style="@style/view_line_h" />

            <LinearLayout style="@style/ll_h_layout_no_margin">

                <TextView
                    style="@style/label_text"
                    android:text="公司地址:" />

                <EditText
                    android:id="@+id/et_detail_position"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="详细地址(与营业执照一致)"
                    android:maxLength="20"
                    style="@style/et_textsize_14"
                    />

            </LinearLayout>

            <LinearLayout style="@style/ll_h_layout_no_margin">

                <TextView
                    style="@style/label_text"
                    android:text="    推荐人\n    手机号:" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="1234567890"
                    android:hint="(选填)请输入11位数字手机号码"
                    android:maxLength="11"
                    style="@style/et_textsize_14"
                    />
            </LinearLayout>

            <View style="@style/view_line_h" />

            <LinearLayout style="@style/ll_h_layout_no_margin">

                <TextView
                    style="@style/label_text"
                    android:text="联系人名:" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="输入联系人姓名"
                    android:maxLength="20"
                    style="@style/et_textsize_14"
                    />

            </LinearLayout>

            <View style="@style/view_line_h" />

            <LinearLayout style="@style/ll_h_layout_no_margin">

                <TextView
                    style="@style/label_text"
                    android:text="联系邮箱:" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="输入联系人邮箱"
                    android:maxLength="20"
                    style="@style/et_textsize_14"
                    />

            </LinearLayout>

            <View style="@style/view_line_h" />

            <View
                style="@style/view_line_h"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp">

                <TextView
                    style="@style/label_text"
                    android:text="营业执照:" />

                <ImageView
                    android:id="@+id/iv_photo1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_add_img"
                    android:scaleType="centerCrop"
                    />
                <ImageView
                    android:id="@+id/iv_photo2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_add_img"
                    android:scaleType="centerCrop"
                    />
                <ImageView
                    android:id="@+id/iv_photo3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_add_img"
                    android:scaleType="centerCrop"
                    />
            </LinearLayout>
            <View
                style="@style/view_line_h"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <CheckBox
                    android:id="@+id/checkbox"
                    style="@style/CustomCheckBoxTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/tv_protocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已阅读并同意《绿屋会员协议》"
                    android:textColor="@color/blue_6f"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/common_round_5dp_bg_green"
                android:gravity="center"
                android:padding="10dp"
                android:text="提  交"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>