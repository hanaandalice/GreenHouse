<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@mipmap/icon_sales_statistics"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:text="销售统计"
        android:textColor="@color/text_color"
        android:textSize="14sp" />

    <View
        style="@style/view_line_h"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="今日销售总额："
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="昨日销售总额："
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="上月销售总额："
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="上月结算金额："
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </LinearLayout>
    <View
        style="@style/view_line_h"/>
    <View
        style="@style/view_line_h"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/text_color"
        android:text="团购验证"
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/icon_group_verification"
        android:background="@color/white"
        />
    <View
        style="@style/view_line_h"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_round_5dp_bg_grey_f5"
            android:hint="输入12位团购劵密码"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:maxLength="12"
            style="@style/et_textsize_14"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="确  定"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:background="@drawable/common_round_left0_bg_green"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_sacn_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_scan_green"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="扫码验证"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:text="验证记录"
            android:drawableLeft="@mipmap/icon_rec_vt"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:layout_marginLeft="45dp"
            android:padding="10dp"
            />
    </LinearLayout>
    <View
        style="@style/view_line_h"/>
    <View
        style="@style/view_line_h"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            style="@style/label_text"
            android:text="我的订单"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/icon_my_order"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全部订单"
            android:gravity="right"
            android:textSize="12sp"
            android:textColor="@color/grey_hint"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_right"
            />
    </LinearLayout>

    <View
        style="@style/view_line_h"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/tv_waiting_for_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/icon_waiting_for_payment"
            android:gravity="center"
            android:text="待付款"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_receiving_waiting"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="待消费"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/icon_to_consume"
            />
        <TextView
            android:id="@+id/t_waiting_evaluation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="待评价"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/icon_waiting_evaluation"
            />
        <TextView
            android:id="@+id/tv_customer_service"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="退款/售后"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/icon_customer_service"
            />
    </LinearLayout>
    <View
        style="@style/view_line_h"/>
    <View
        style="@style/view_line_h"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        style="@style/ll_h_layout_no_margin">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商品管理"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/icon_merchandise_control"
            android:gravity="center_vertical"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_right"
            />
    </LinearLayout>
    <View
        style="@style/view_line_h"
        />
    <LinearLayout
        style="@style/ll_h_layout_no_margin">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="结算管理"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/icon_settlement_management"
            android:gravity="center_vertical"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_right"
            />
    </LinearLayout>
    <View
        style="@style/view_line_h"
        />
    <LinearLayout
        style="@style/ll_h_layout_no_margin">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商品评价"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/icon_shop_reviews"
            android:gravity="center_vertical"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_right"
            />
    </LinearLayout>
</LinearLayout>