<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_dismiss"
    >
    <LinearLayout
        android:id="@+id/layout_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分享到："
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="@color/bg_green"
            />

        <View
            style="@style/view_line_h"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:id="@+id/tv_wx"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="微信好友"
                android:drawableTop="@mipmap/icon_share_wx"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/text_color"
                android:drawablePadding="5dp"
                />
            <TextView
                android:id="@+id/tv_wx_f"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="朋友圈"
                android:drawableTop="@mipmap/icon_share_wx_f"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/text_color"
                android:drawablePadding="5dp"
                />
            <TextView
                android:id="@+id/tv_qq"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="QQ好友"
                android:drawableTop="@mipmap/icon_share_qq"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/text_color"
                android:drawablePadding="5dp"
                />
            <TextView
                android:id="@+id/tv_qq_z"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="QQ空间"
                android:drawableTop="@mipmap/icon_share_zq"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/text_color"
                android:drawablePadding="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="19dp"
            >
            <TextView
                android:id="@+id/tv_wb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="新浪微博"
                android:drawableTop="@mipmap/icon_share_wb"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/text_color"
                android:drawablePadding="5dp"
                />
            <TextView
                android:id="@+id/tv_copy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="复制链接"
                android:drawableTop="@mipmap/icon_share_copy"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/text_color"
                android:drawablePadding="5dp"
                />
            <TextView
                android:id="@+id/tv_more"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="更多"
                android:drawableTop="@mipmap/icon_share_more"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/text_color"
                android:drawablePadding="5dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:drawablePadding="5dp"
                />
        </LinearLayout>
        <View
            style="@style/view_line_h"/>
        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/textColor"
            android:padding="16dp"
            />
    </LinearLayout>
</RelativeLayout>