<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cube_ptr="http://schemas.android.com/tools"
    android:id="@+id/dl_commodity_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:padding="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/img_back"
                    android:padding="10dp"
                    />
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="搜索商品/店铺"
                    android:textSize="14sp"
                    android:textColor="@color/grey_b5"
                    android:drawablePadding="10dp"
                    android:background="@drawable/radius_25dp_greyf2_bg"
                    android:drawableLeft="@mipmap/icon_search_grey"
                    android:drawableRight="@mipmap/icon_voice_grey"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    />
                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_share"
                    />
                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_more"
                    android:padding="6dp"
                    />

            </LinearLayout>
            <android.support.design.widget.CoordinatorLayout
                android:id="@+id/main_coordinator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_color">
                <android.support.design.widget.AppBarLayout
                    android:id="@+id/mAppBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed"
                        android:background="@drawable/radius_5dp_greyf2_1dp_line"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                app:siShape="@drawable/shape_rounded_right_top_down_0dp"
                                android:src="@mipmap/test_goods_discover"
                                />
                            <View
                                style="@style/view_line_v"/>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:paddingBottom="6dp"
                                android:paddingTop="10dp"
                                >
                                <TextView
                                    style="@style/label_text"
                                    android:text="深圳市鑫宇洋食品公司"
                                    android:layout_marginLeft="10dp"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_alignParentBottom="true"
                                    >
                                    <LinearLayout
                                        android:id="@+id/table_group"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center"
                                        />
                                    <TextView
                                        style="@style/hint_text_samll"
                                        android:text="凑单>"
                                        />

                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <View
                        style="@style/view_line_h"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@color/white"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <RelativeLayout
                                android:id="@+id/layout_general"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                >
                                <CheckBox
                                    android:id="@+id/cb_general"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:button="@null"
                                    android:checked="false"
                                    android:clickable="false"
                                    android:drawablePadding="5dp"
                                    android:drawableRight="@drawable/checked_top_and_down"
                                    android:padding="10dp"
                                    android:text="综合"
                                    android:textColor="@color/bg_green"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:maxLength="2"
                                    android:layout_centerInParent="true"
                                    />
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/tv_sales_volume"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="销量"
                                android:textSize="14sp"
                                android:textColor="@color/text_color"
                                android:gravity="center"
                                />
                            <RelativeLayout
                                android:id="@+id/layout_price"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                >
                                <CheckBox
                                    android:id="@+id/cb_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:button="@null"
                                    android:clickable="false"
                                    android:checked="false"
                                    android:drawablePadding="5dp"
                                    android:drawableRight="@drawable/checked_top_and_down"
                                    android:padding="10dp"
                                    android:text="价格"
                                    android:textColor="@color/text_color"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:layout_centerInParent="true"
                                    />
                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/layout_screen"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                >
                                <TextView
                                    android:id="@+id/tv_screen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="筛选"
                                    android:drawableRight="@mipmap/icon_screen"
                                    android:drawablePadding="5dp"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_color"
                                    />
                            </RelativeLayout>
                        </LinearLayout>
                        <View
                            style="@style/view_line_h"
                            android:layout_alignParentBottom="true"
                            />
                        <View
                            android:id="@+id/view_green_line"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/bg_green"
                            android:layout_alignParentBottom="true"
                            />
                    </RelativeLayout>
                </android.support.design.widget.AppBarLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    >
                    <com.zipingfang.greenhouse.JD_module.headerview.JDHeaderView
                        android:id="@+id/header_list_view_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        cube_ptr:ptr_duration_to_close="200"
                        cube_ptr:ptr_duration_to_close_header="400"
                        cube_ptr:ptr_keep_header_when_refresh="true"
                        cube_ptr:ptr_pull_to_fresh="false"
                        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.0"
                        cube_ptr:ptr_resistance="1.7">
                        <android.support.v4.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_margin="10dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="16dp"
                                    android:paddingRight="16dp"
                                    android:background="@drawable/radius_25dp_white_bg"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="以下商品单笔满180加10元换购商品"
                                        android:textSize="12sp"
                                        android:textColor="@color/redColor_f2"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="（还差50元）凑单"
                                        android:textSize="12sp"
                                        android:textColor="@color/bg_green"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        />
                                </LinearLayout>
                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/recyclerView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:overScrollMode="never"
                                    android:scrollbars="none" />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="80dp"
                                        android:background="@color/bg_color"
                                        />
                            </LinearLayout>
                        </android.support.v4.widget.NestedScrollView>
                    </com.zipingfang.greenhouse.JD_module.headerview.JDHeaderView>
                    <FrameLayout
                        android:id="@+id/layout_list_general"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparency_black88"
                        android:visibility="gone"
                        >
                        <ListView
                            android:id="@+id/listView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@null"
                            android:scrollbars="none"
                            android:layoutAnimation="@anim/anim_listview_item"
                            />
                    </FrameLayout>
                </FrameLayout>
            </android.support.design.widget.CoordinatorLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            >
            <View
               style="@style/view_line_h"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    style="@style/label_text_small"
                    android:text="小计："
                    android:layout_marginLeft="10dp"
                    />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="¥190.00"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/redColor_f2"
                        />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_86"
                    android:textSize="12sp"
                    android:layout_marginRight="6dp"
                    android:text="去购物车\n选择换购商品"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="加购物车（4）"
                    android:background="@color/bg_green"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>



    <!--左边侧边栏选择商品规格-->
    <FrameLayout
        android:id="@+id/layout_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        />
    <!--右边侧边栏筛选-->
    <FrameLayout
        android:id="@+id/layout_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/white"
        />
</android.support.v4.widget.DrawerLayout>