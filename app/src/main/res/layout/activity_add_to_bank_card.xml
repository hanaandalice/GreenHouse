<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    >
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <View
                style="@style/view_line_h"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                style="@style/ll_h_layout_no_margin"
                >
                <TextView
                    style="@style/label_text"
                    android:text="选择银行："
                    android:layout_marginRight="10dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingLeft="1dp"
                    android:background="@drawable/rect_white_bg_1dp_line"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/test_bank_logo_o1"
                        android:scaleType="fitCenter"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_right_black"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <View
                style="@style/view_line_h"
                />
            <LinearLayout
                style="@style/ll_h_layout_no_margin"
                >
                <TextView
                    style="@style/label_text"
                    android:text="选择银行："
                    android:layout_marginRight="10dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_white_bg_1dp_line"
                    android:padding="8dp">

                    <TextView style="@style/label_text"
                        />

                </RelativeLayout>
            </LinearLayout>
            <View
                style="@style/view_line_h"
                />
            <LinearLayout style="@style/ll_h_layout_no_margin">

                <TextView
                    style="@style/label_text"
                    android:layout_marginRight="10dp"
                    android:text="选择银行：" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_white_bg_1dp_line"
                    android:padding="8dp">

                    <TextView style="@style/label_text" />


                </RelativeLayout>
            </LinearLayout>
            <View
                style="@style/view_line_h"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >
                <TextView
                    style="@style/label_text"
                    android:text="选择银行："
                    android:layout_marginRight="10dp"
                    android:paddingTop="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:id="@+id/layout_select_province"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/rect_white_bg_1dp_line"
                            android:gravity="center_vertical"
                            android:paddingBottom="6dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="6dp"
                            >
                            <TextView
                                android:id="@+id/tv_province"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="-省-"
                                android:textColor="@color/text_color"
                                android:textSize="12sp" />

                            <View style="@style/view_line_v" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:src="@mipmap/icon_bottom_grey" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layout_select_city"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/rect_white_bg_1dp_line"
                            android:gravity="center_vertical"
                            android:paddingBottom="6dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="6dp"
                            >
                            <TextView
                                android:id="@+id/tv_city"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="-市-"
                                android:textColor="@color/text_color"
                                android:textSize="12sp" />

                            <View style="@style/view_line_v" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:src="@mipmap/icon_bottom_grey" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        >
                        <LinearLayout
                            android:id="@+id/layout_select_area"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/rect_white_bg_1dp_line"
                            android:gravity="center_vertical"
                            android:paddingBottom="6dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="6dp"
                            >
                            <TextView
                                android:id="@+id/tv_area"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="-区-"
                                android:textColor="@color/text_color"
                                android:textSize="12sp" />

                            <View style="@style/view_line_v" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:src="@mipmap/icon_bottom_grey" />
                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/transparency"
                            android:layout_marginRight="30dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp"
                >

                <TextView
                    style="@style/label_text"
                    android:layout_marginRight="10dp"
                    android:text="开户银行："
                    android:paddingTop="8dp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rect_white_bg_1dp_line"
                        android:padding="8dp">
                        <TextView style="@style/label_text" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="如：广东省深圳市宝安支行"
                        android:layout_marginTop="8dp"
                        />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="45dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="保  存"
                    android:textColor="@color/white"
                    android:background="@color/bg_green"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="45dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="取  消"
                    android:textColor="@color/bg_green"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>