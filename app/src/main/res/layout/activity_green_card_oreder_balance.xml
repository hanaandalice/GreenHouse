<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include layout="@layout/include_title"/>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >
                        <TextView
                            style="@style/label_text"
                            android:text="收货人：张XX"
                            />

                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/text_color"
                        android:drawableLeft="@mipmap/icon_phone_green"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:text="发送手机：180215471324"
                        android:drawableRight="@mipmap/icon_edit_green"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bg_balance_position"
                    android:scaleType="centerCrop"
                    android:background="@color/bg_color"
                    android:paddingBottom="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="总计6个商品，分成2个订单"
                    android:drawableRight="@mipmap/icon_right_white"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:background="@color/bg_green"
                    android:padding="10dp"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_commodity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    />
                <View
                    style="@style/view_line_h"
                    android:layout_marginTop="10dp"
                    />
                <LinearLayout
                    android:id="@+id/layout_protocol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:background="@color/white"
                    android:padding="10dp"
                    >
                    <CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomCheckBoxTheme"
                        android:padding="6dp"
                        />
                    <TextView
                        android:id="@+id/tv_protocol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/blue_6f"
                        android:text="已阅读并同意《绿屋会员协议》"
                        />
                </LinearLayout>
                <View
                    style="@style/view_line_h"/>
                <LinearLayout
                    style="@style/ll_h_layout_no_margin"
                    >
                    <TextView
                      style="@style/label_text"
                        android:text="支付方式"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableRight="@mipmap/icon_right_black"
                        android:drawablePadding="10dp"
                        android:gravity="right"
                        android:text="网上支付"
                        android:textSize="14sp"
                        android:textColor="@color/text_color"
                        />
                </LinearLayout>
                <View
                    style="@style/view_line_h"/>
                <View
                    style="@style/view_line_h"
                    android:layout_marginTop="10dp"
                    />
                <!--账户余额-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        style="@style/label_text"
                        android:text="账户余额"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/text_color"
                        android:text="可用"
                        android:gravity="right"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/bg_green"
                        android:text="¥0"
                        android:maxLength="9"
                        />
                    <TextView
                        style="@style/label_text"
                        android:text="可付¥0"
                        android:layout_marginLeft="10dp"
                        android:maxLength="13"
                        />
                    <com.kyleduo.switchbutton.SwitchButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:kswAnimationDuration="300"
                        app:kswBackDrawable="@drawable/ios_back_drawable"
                        app:kswBackMeasureRatio="2.0"
                        app:kswThumbDrawable="@drawable/ios_thumb_selector"
                        app:kswThumbMarginBottom="-7dp"
                        app:kswThumbMarginLeft="-3dp"
                        app:kswThumbMarginRight="-3dp"
                        app:kswThumbMarginTop="-2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:layout_marginBottom="-4dp"
                        android:layout_alignParentRight="true"
                        />
                </LinearLayout>
                <View
                    style="@style/view_line_h"/>
                <View
                    style="@style/view_line_h"
                    android:layout_marginTop="10dp"
                    />
                <!--店铺优惠和运费-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    />
                <View
                    style="@style/view_line_h"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/bg_color"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
    <!--底部view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            style="@style/label_text"
            android:text="实付款："
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="¥ 396.50"
            android:textColor="@color/redColor_f2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="立即订单"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:background="@color/bg_green"
            />
    </LinearLayout>

</RelativeLayout>