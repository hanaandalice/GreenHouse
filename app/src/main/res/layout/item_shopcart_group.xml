<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SwipeMenuExpandableListView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/divider_slide_shopcart"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <CheckBox
            android:id="@+id/determine_chekbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@drawable/checkbox_shopcart"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_source_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绿屋酒水自营"
            android:textSize="14sp"
            android:textColor="@color/bg_green"
            android:layout_marginLeft="6dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            android:text="满99免运费，还差25.00"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="6dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/redColor_f2"
            android:textSize="12sp"
            android:text="去凑单 >"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_freight_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:drawableRight="@mipmap/icon_freight_free"
            android:text="已免运费"
            android:textColor="@color/grey_hint"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--领劵-->
        <LinearLayout
            android:id="@+id/layout_led_the_securities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:background="#FFFAED"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_collar_coupons"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/grey_hint"
                android:text="满88减10 满180减50 满300减100"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/redColor_f2"
                android:textSize="12sp"
                android:text="领劵 >"
                />
        </LinearLayout>
        <!--换购-->
        <LinearLayout
            android:id="@+id/layout_redemption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:background="#FFFAED"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_table_redemption"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/grey_hint"
                android:text="购满128元，可加10元换购"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/redColor_f2"
                android:textSize="12sp"
                android:text="去换购 >"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>