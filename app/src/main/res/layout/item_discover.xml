<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp"
    android:gravity="center_vertical"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"

        >
        <TextView
            style="@style/label_text"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="韩国柯罗德啤酒新上市"
            />
        <TextView
            style="@style/hint_text_samll"
            android:text="每个国家的啤酒有每个国家的特色。
            cass、hite算是韩国代表性
           啤酒，最近韩国人喝kloud啤酒的"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            >
            <TextView
                style="@style/hint_text_samll"
                android:drawableLeft="@mipmap/icon_time_grey"
                android:text="22小时前"
                android:drawablePadding="4dp"
                />
            <TextView
                style="@style/hint_text_samll"
                android:drawableLeft="@mipmap/icon_page_view_grey"
                android:text="1232"
                android:drawablePadding="4dp"
                android:layout_marginLeft="6dp"
                />
        </LinearLayout>
    </LinearLayout>
    <lib.lhh.fiv.library.FrescoImageView
        android:layout_width="120dp"
        android:layout_height="80dp"
        fresco:actualImageScaleType="centerCrop"
        android:src="@mipmap/test_goods_discover"
        fresco:failureImage="@mipmap/default_error"
        fresco:placeholderImage="@mipmap/test_goods_discover"
        fresco:placeholderImageScaleType="centerCrop"
        />

</LinearLayout>