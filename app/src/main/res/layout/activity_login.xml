<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    android:paddingTop="10dp"
    >
    <TextView
        android:id="@+id/tv_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_login_logo"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="33dp"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@mipmap/icon_bg_login1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/login_r_edit_bg_white"
            android:layout_centerInParent="true"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:padding="5dp"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/et_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/icon_account"
                android:drawablePadding="10dp"
                android:hint="用户名/邮箱/手机号"
                android:textColor="@color/textColor_green"
                android:textColorHint="@color/grey_hint"
                android:textSize="14sp"
                android:maxLength="20"
                android:textCursorDrawable="@drawable/color_cursor"
                android:cursorVisible="true"
                />

            <ImageView
                android:id="@+id/iv_bottom_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_bottom_green"
                android:padding="7dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/login_r_edit_bg_white"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_marginTop="25dp"
            >
            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/icon_login_password"
                android:drawablePadding="10dp"
                android:hint="输入你的密码"
                android:maxLength="20"
                android:textColor="@color/textColor_green"
                android:textColorHint="@color/grey_hint"
                android:textSize="14sp"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/color_cursor"
                android:cursorVisible="true"
                />

            <ImageView
                android:id="@+id/iv_visibility_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_visibility_password"
                android:padding="7dp"

                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_register_immediately"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即注册"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:padding="10dp" />
            <TextView
                android:id="@+id/tv_forget_the_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码?"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/icon_login_button"
            android:gravity="center"
            android:text="登        录"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/tv_alipay_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝登录"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:drawableLeft="@mipmap/icon_alipay_login"
            android:drawablePadding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/tv_wechat_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信登录"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:drawableLeft="@mipmap/icon_wechat_login"
            android:drawablePadding="10dp"
            />
    </RelativeLayout>
</RelativeLayout>