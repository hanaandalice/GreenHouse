<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    >
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <View
                style="@style/view_line_h"
                />
            <View
                style="@style/view_line_h"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:id="@+id/layout_wechat_pay"
                style="@style/ll_h_layout_no_margin">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="微信支付"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@mipmap/icon_wechat"
                    />
                <ImageView
                    android:id="@+id/iv_wechat_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_order_balance_select_true"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <View
                style="@style/view_line_h"
                />
            <LinearLayout
                android:id="@+id/layout_alipay"
                style="@style/ll_h_layout_no_margin">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="支付宝支付"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@mipmap/icon_alipay"
                    />
                <ImageView
                    android:id="@+id/iv_alipay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_order_balance_select_true"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <View
                style="@style/view_line_h"
                />
            <LinearLayout
                android:id="@+id/layout_bank_card_pay"
                style="@style/ll_h_layout_no_margin">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="银行卡支付"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@mipmap/icon_bank_card_pay"
                    />
                <ImageView
                    android:id="@+id/iv_layout_bank_card_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_order_balance_select_true"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <View
                style="@style/view_line_h"
                />
            <View
                style="@style/view_line_h"
                android:layout_marginTop="45dp"
                />
            <LinearLayout
                android:id="@+id/layout_line_pay"
                style="@style/ll_h_layout_no_margin">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="线下银行汇款"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@mipmap/icon_line_pay"
                    android:gravity="center_vertical"
                    />
                <ImageView
                    android:id="@+id/iv_line_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_order_balance_select_true"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <View
                style="@style/view_line_h"
                />

            <View
                style="@style/view_line_h"
                android:layout_marginTop="45dp"
                />
            <LinearLayout
                style="@style/ll_h_layout_no_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应付金额："
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@mipmap/icon_amount_to_pay"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/redColor_f2"
                    android:textSize="14sp"
                    android:text="¥369.50"
                    android:layout_marginLeft="4dp"
                    />
            </LinearLayout>
            <View
                style="@style/view_line_h"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/bg_color"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认付款"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/radius_5dp_red_bg"
        android:layout_alignParentBottom="true"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>