<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >
    <TextView
        style="@style/hint_text"
        android:layout_marginTop="20dp"
        android:text="请回答以下保密提问:" />

    <TextView
        android:id="@+id/tv_issue"
        style="@style/label_text"
        android:layout_marginTop="10dp"
        android:text="你的出生地点是?" />
    <EditText
        android:id="@+id/et_answer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rect_white_bg_1dp_line"
        android:hint="请输入你的回答"
        android:maxLength="20"
        android:gravity="top"
        android:padding="10dp"
        style="@style/et_textsize_14"
        />
    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="@drawable/common_round_5dp_bg_green"
        android:gravity="center"
        android:padding="10dp"
        android:text="下 一 步"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>