<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提醒闹钟"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@color/bg_green"

            />
        <View
            style="@style/view_line_h"/>
        <TextView
            style="@style/label_text"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:text="距开始仅剩"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00：00：59"
            android:textSize="12sp"
            android:textColor="@color/bg_green"
            android:drawableLeft="@mipmap/icon_time_green"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >
            <ImageView
                android:id="@+id/iv_goods"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/test_icon_commodity"
                />
            <TextView
                style="@style/label_text_small"
                android:text="爱生源柚子茶"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/iv_goods"
                android:layout_toEndOf="@+id/iv_goods"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥1.00"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/iv_goods"
                android:layout_toEndOf="@+id/iv_goods"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textColor="@color/redColor_f2"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="马上去抢购"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/radius_5dp_red_bg"
            />
    </LinearLayout>
</FrameLayout>