<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    >
    <View
        style="@style/view_line_h"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/test_icon_commodity"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >
            <TextView
                style="@style/label_text"
                android:text="韩国泡菜原味是怎么样"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                >
                <TextView
                    style="@style/label_text_small"
                    android:text="发布人："
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好吃的泡菜"
                    android:textSize="12sp"
                    android:textColor="@color/blue_6f"
                    />
            </LinearLayout>
            <TextView
                style="@style/label_text_small"
                android:text="2017-02-13 12：23:32"
                android:layout_marginTop="6dp"
                />
        </LinearLayout>

    </LinearLayout>
    <View
        style="@style/view_line_h"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            style="@style/hint_text"
            android:text="我的评论  "
            />
        <TextView
            style="@style/label_text"
            android:text="真的可以做泡菜么？"
            android:maxLines="2"
            android:ellipsize="end"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_color"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="好吃的泡菜"
                android:textColor="@color/blue_6f"
                android:layout_marginRight="4dp"
                />
            <TextView
                style="@style/hint_text_samll"
                android:text="回复："
                android:layout_marginRight="6dp"
                />
            <TextView
                style="@style/label_text_small"
                android:text="试试看吧"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="好吃的泡菜"
                android:textColor="@color/blue_6f"
                android:layout_marginRight="4dp"
                />
            <TextView
                style="@style/hint_text_samll"
                android:text="回复："
                android:layout_marginRight="6dp"
                />
            <TextView
                style="@style/label_text_small"
                android:text="我做的泡菜比超市买的好吃"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="韩国泡菜"
                android:textColor="@color/bg_green"
                android:layout_marginRight="4dp"
                />
            <TextView
                style="@style/hint_text_samll"
                android:text="回复："
                android:layout_marginRight="6dp"
                />
            <TextView
                style="@style/label_text_small"
                android:text="楼上做的真的是泡菜吗？"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="我"
                android:textColor="@color/redColor_f2"
                android:layout_marginRight="4dp"
                />
            <TextView
                style="@style/hint_text_samll"
                android:text="回复："
                android:layout_marginRight="6dp"
                />
            <TextView
                style="@style/label_text_small"
                android:text="试试看吧！"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/grey_hint"
            android:text="查看更多"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            />
    </LinearLayout>

</LinearLayout>