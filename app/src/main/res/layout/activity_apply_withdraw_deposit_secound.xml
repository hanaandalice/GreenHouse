<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    >
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                style="@style/view_line_h"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:baselineAligned="false">
                <TextView
                    style="@style/label_text"
                    android:text="可用余额"
                    android:drawableLeft="@mipmap/icon_customer_service"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/redColor_f2"
                    android:text="¥ 200"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:text="冻结金额"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/blue_6f"
                    android:text="¥ 100"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/bg_green"
                android:text="当余额小于1角钱时，不支持提现"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="10dp"
                android:background="#E8F8DB"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="提现金额"
                    android:textColor="@color/grey_hint88"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rect_white_bg_1dp_line"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginRight="6dp"
                    android:paddingBottom="6dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:digits="1234567890."
                        android:inputType="phone"
                        android:maxLength="9"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="@color/grey_hint88"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可提现：¥200"
                    android:textColor="@color/bg_green"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="保  存"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/bg_green"
                    android:background="@drawable/rect_line_green_1dp"
                    android:padding="10dp"
                    android:layout_marginRight="20dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="修  改"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@color/grey_e5"
                    android:padding="10dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/bg_green"
                android:text="银行卡管理"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="10dp"
                android:background="#E8F8DB"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="10dp"
                >
                <TextView
                    style="@style/hint_text_samll"
                    android:text="银行卡" />

                <com.xilada.xldutils.view.ListForScoroller
                    android:id="@+id/listView_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:layout_marginTop="6dp"
                    />
                <ImageView
                    android:id="@+id/iv_add_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_bank_add"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/bg_green"
                android:text="银行卡管理"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="10dp"
                android:background="#E8F8DB"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="10dp"
                >
                <TextView
                    style="@style/hint_text_samll"
                    android:text="第三方支付"
                    />
               <com.xilada.xldutils.view.ListForScoroller
                   android:id="@+id/listView_pay"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:divider="@null"
                   android:layout_marginTop="6dp"
                   />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_bank_add"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/bg_green"
                android:text="提现支付提交"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="10dp"
                android:background="#E8F8DB"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textSize="14sp"
                        android:textColor="@color/redColor_f2"
                        />
                    <TextView
                        style="@style/label_text"
                        android:text="支付密码"
                        android:layout_marginRight="10dp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:hint="输入支付密码"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey_hint"
                        android:padding="10dp"
                        android:background="@mipmap/bg_edit_import"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textSize="14sp"
                        android:textColor="@color/redColor_f2"
                        />
                    <TextView
                        style="@style/label_text"
                        android:text="手机验证"
                        android:layout_marginRight="10dp"
                        />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:hint="输入手机号码"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey_hint"
                        android:padding="10dp"
                        android:maxLength="11"
                        android:inputType="phone"
                        android:digits="1234567890"
                        android:background="@mipmap/bg_edit_import"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:text="发送短信验证码"
                        android:background="@color/bg_green"
                        android:padding="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textSize="14sp"
                        android:textColor="@color/redColor_f2"
                        />
                    <TextView
                        style="@style/label_text"
                        android:text="验证码    "
                        android:layout_marginRight="10dp"
                        />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:hint="输入收到的验证码"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey_hint"
                        android:padding="10dp"
                        android:maxLength="6"
                        android:background="@mipmap/bg_edit_import"
                        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                        android:layout_marginRight="6dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_6f"
                        android:textSize="12sp"
                        android:text="手机失效，密保问题\n或邮箱重绑手机"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="90dp"
                    android:background="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textSize="14sp"
                        android:textColor="@color/redColor_f2"
                        />
                    <TextView
                        style="@style/label_text"
                        android:text="验证码    "
                        android:layout_marginRight="10dp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:hint="输入备注信息"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey_hint"
                        android:background="@drawable/rect_no_top_1dp_line"
                        android:layout_marginRight="6dp"
                        android:minHeight="80dp"
                        android:gravity="top"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提  交"
                android:textColor="@color/white"
                android:background="@color/bg_green_bc"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="45dp"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>



</LinearLayout>