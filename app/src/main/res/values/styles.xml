<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!--<item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>-->
    </style>
    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="label_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/label_text</item>
    </style>
    <style name="label_text_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/label_text</item>
    </style>
    <style name="green_text_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColor_green</item>
    </style>
    <style name="hint_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_b5</item>
    </style>
    <style name="hint_text_samll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_b5</item>
    </style>
    <style name="ll_h_layout_no_margin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="ll_v_layout_no_margin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="rl_layout_no_margin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="et_ll_v_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    <style name="et_ll_h_weight_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    <style name="et_textsize_14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/grey_hint</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:cursorVisible">true</item>
    </style>


    <style name="CustomCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
    <item name="android:button">@drawable/checkbox_style</item></style>
    <!--gradation-->
    <style name="MaterialIndicator.Demo">
        <item name="mi_indicatorColor">?android:attr/colorAccent</item>
        <item name="mi_indicatorPadding">32dp</item>
        <item name="mi_indicatorRadius">4dp</item>
    </style>

    <style name="MaterialIndicator">
        <item name="mi_indicatorRadius">4dp</item>
        <item name="mi_indicatorColor">#ff009688</item>
    </style>
    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/general_ratingbar_drawable</item>
        <item name="android:minHeight">15.5dp</item>
        <item name="android:maxHeight">32dip</item>
    </style>

    <!--recyclerItemLine-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:listDivider">@drawable/recycler_divider_line</item>
    </style>

    <style name="Widget.Design.AppBarLayout" parent="android:Widget">
        <item name="elevation">0dp</item>
        <item name="android:background">@color/bg_color</item>
    </style>
</resources>
